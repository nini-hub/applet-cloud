/* miniprogram/pages/news.wxss */
.card {
  display: flex;
  justify-content: flex-start;
  height: 100px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin: 10px 5px;
}

image {
  width: 120px;
  height: 80px;
  margin: 10px 0;
  border-radius: 5px;
}

.info {
  margin: auto 10px;
}

.info view:nth-child(1) {
  font-size: 16px;
} 

.info view:nth-child(2) {
  font-size: 12px;
  color: #ccc;
  margin-top: 40px;
} 