.brand {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}
.brand .card {
  width: 31%;
  height: 125px;
  text-align: center;
  border: 1px solid #f6f6f6;
  border-radius: 5px;
  background-color: #fff;
}
h3 {
  margin-top: 20px;
  text-align: center;
  text-shadow: palegoldenrod 0.1em 0.1em 0.2em;
}
.brand .card image {
  width: 65px;
  height: 65px;
  margin: auto;
}
.brand .card view:nth-child(2){
  font-size: 14px;
  margin-top: 10px;
}

.brand .card view:nth-child(3){
  font-size: 12px;
  color: #ccc;
  margin-top: 5px;
}

.strength {
  display: flex;
  flex-wrap: wrap;
}

.strength .card {
  width: 49%;
  text-align: center;
  height: 140px;
}

.strength .card:nth-child(1){
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  margin-top: 20px;
}

.strength .card:nth-child(2){
  border-bottom: 1px solid #ccc;
  margin-top: 20px;
}

.strength .card:nth-child(3){
  /* border-top: 1px solid #ccc; */
  padding-top: 20px;
  box-sizing: border-box;
}

.strength .card:nth-child(4){
  border-left: 1px solid #ccc;
  padding-top: 20px;
  box-sizing: border-box;
}

.strength .card image {
  width: 50px;
  height: 50px;
}
.strength .card view:nth-child(2){
  font-size: 14px;
  margin-top: 10px;
}

.strength .card view:nth-child(3){
  font-size: 12px;
  color: #ccc;
  padding: 0 10px;
  margin-top: 5px;
  box-sizing: border-box;
}
